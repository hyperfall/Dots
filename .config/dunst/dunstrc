[colors]
	background = "#0e0d17"
	foreground = "#cccccc"

[global]
    ### Display ###

    monitor = 0
    follow = mouse

#    geometry = "375x20-28+36"
    geometry = "375x20-8+55"
    indicate_hidden = yes
    shrink = no
    transparency = 60
    corner_radius = 0
    notification_height = 0
    separator_height = 3
    padding = 12
    horizontal_padding = 12
    frame_width = 0

    frame_color = "#4e49eb"
    separator_color = "#ffffff"
    sort = yes
    idle_threshold = 120
    mouse_right_click = close_all
    

    ### Text ###
    font = SF Pro Display Semibold 9
    line_height = 0

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s </b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    max_icon_size = 64
    icon_path = .local/share/icons/McMojave-circle-dark/status/24:.local/share/icons/We10X-black/scalable/devices:.local/share/icons/We10X-black/scalable/apps:.local/share/icons/We10X-black/22/actions

    ### History ###
    sticky_history = yes
    history_length = 50

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -show run -p dunst:
    browser = /usr/bin/firefox-developer-edition -new-tab
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = true
    force_xinerama = false
    verbosity = mesg

[experimental]
    per_monitor_dpi = false

[shortcuts]
    close = ctrl+shift+space
    history = ctrl+space
    #close_all = ctrl+shift+space
    context = ctrl+shift+period

