configuration {
  show-icons: true;
  //icon-theme: "Papirus";
  font: "Poppins Medium 10";
  drun-display-format: "{icon} {name}";
  display-run: " ";
  display-drun: " ";
  display-window: " ";
}

* {
  bg: #0a0a1055;
  bg-alt: #0a0a1055;
  fg: #cacbcf55;
  fg-alt: #474db3;
  background-color: #0a0a1055;
  border: 0;
  padding: 0;
  margin: 0;
  spacing: 0;
}

window {
  height: 150px;
  width: 400px;
  location: southwest;
  anchor: southwest;
  border-radius: 5px;
  y-offset: -889;
  x-offset: 60;
  transparency: "real";
}

mainbox {
  children: [listview, inputbar];
}

listview {
  columns: 1;
  padding: 0 0 0 0;
}

element {
  orientation: vertical;
  padding: 17 17 17 8;
  text-color: @fg;
}

element selected {
  background-color: @bg;
  text-color: @fg-alt;
}

inputbar {
  background-color: @background-color;
  children: [prompt, entry];
}

prompt {
  enabled: true;
  text-color: @fg;
  padding: 10 0 0 8;
  font: "SauceCodePro Nerd Font Medium 11";
}

entry {
  text-color: @fg;
  padding: 13;
}
